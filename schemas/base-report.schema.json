{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/base-report.schema.json",
  "title": "Pretty Good Prompts - Base Report Schema (v1)",
  "type": "object",
  "required": ["prompt_id", "report_title", "executive_dashboard", "sections", "next_actions"],
  "properties": {
    "prompt_id": {"type":"string", "description":"Unique prompt identifier as <stack>/<slug>"},
    "report_title": {"type":"string"},
    "summary": {"type":["string","null"]},
    "executive_dashboard": {"type":"object", "additionalProperties": true},
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title"],
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "content": {"type": ["string", "object", "array", "null"]},
          "subsections": {"type": "array", "items": {"type": "object"}}
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "severity": {"type": "string", "enum": ["critical", "high", "medium", "low"]},
          "impact": {"type": "string"},
          "effort_hours": {"type": "number"},
          "category": {"type": "string"},
          "steps": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "risks": {"type": "array", "items": {"type": "object"}},
    "metrics": {"type": "object", "additionalProperties": true},
    "next_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title"],
        "properties": {
          "title": {"type": "string"},
          "priority": {"type": "string", "enum": ["critical", "high", "medium", "low"]},
          "owner": {"type": "string"},
          "due_date": {"type": "string", "format": "date"},
          "status": {"type": "string", "enum": ["pending", "in_progress", "done"]}
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "generated_at": {"type": "string", "format": "date-time"},
        "generator": {"type": "string"},
        "version": {"type": "string"}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
